<% layout('layouts/boilerplate') -%>

<div class="row">
  <div class="col-8 offset-2 btn-outline-primary rounded-3">
    <h4>new ejs add</h4>
    <form
      method="post"
      action="/listing"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="add Title"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>
      <!---- <label>description:</label>
    <input type="text" name="listing[description]" required /><br /><br />-->

      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label"
          >Description</label
        >
        <textarea
          class="form-control"
          id="exampleFormControlTextarea1"
          rows="3"
          name="listing[description]"
          required
        ></textarea>
      </div>

      <div class="mb-3">
        <!---------    <label for="exampleFormControlInput1" class="form-label">Image</label>
        <input
          type="text"
          name="listing[image.url]"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="add image link url"
          required
        />
        ---->
        <input class="form-control" type="file" name="listing[image]" />
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Price</label>
        <input
          type="text"
          name="listing[price]"
          required
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="add price"
        />
        <div class="invalid-feedback">Price looks good!</div>
      </div>

      <div class="input-group mb-3">
        <input
          type="text"
          name="listing[location]"
          required
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="add location"
        />

        <input
          type="text"
          name="listing[country]"
          required
          class="form-control mx-1"
          id="exampleFormControlInput1"
          placeholder=" add Country"
        />
      </div>

      <input class="btn btn-primary" type="submit" value="Submit" />
    </form>
  </div>
</div>
